{
    "name": "@replikanti/flowlint-core",
    "version": "0.8.0",
    "description": "Core linting engine for n8n workflows",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "files": [
        "dist/",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "eslint src/",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "n8n",
        "workflow",
        "linter",
        "static-analysis"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Replikanti/flowlint-core.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=24.12.0"
    },
    "dependencies": {
        "ajv": "^8.17.1",
        "ajv-draft-04": "^1.0.0",
        "ajv-formats": "^3.0.1",
        "micromatch": "^4.0.8",
        "yaml": "^2.8.2"
    },
    "devDependencies": {
        "@types/micromatch": "4.0.10",
        "@types/node": "24.10.3",
        "tsup": "8.5.1",
        "typescript": "5.9.3",
        "vitest": "4.0.15"
    }
}
